FROM ollama/ollama:latest

# Install curl
RUN apt-get update && apt-get install -y curl

# Override entrypoint and set environment
ENTRYPOINT []
ENV OLLAMA_HOST=0.0.0.0:11434
ENV OLLAMA_ORIGINS="*"

# Expose port
EXPOSE 11434

# Simple startup command
CMD ollama serve & sleep 30 && ollama pull gemma3:1b && wait
